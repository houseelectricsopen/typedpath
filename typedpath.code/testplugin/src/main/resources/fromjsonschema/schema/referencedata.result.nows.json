{
   "$schema":"http://json-schema.org/draft-07/schema#",
   "type":"object",
   "_TODO1":"assuming priority is a function of urgentTimeLimitMinutes",
   "_TODO2":"security groups",
   "properties":{
      "nows":{
         "type":"array",
         "items":{
            "$ref":"#/definitions/now"
         }
      }
   },
   "additionalProperties":false,
   "required":[
      "nows"
   ],
   "definitions":{
      "now":{
         "type":"object",
         "properties":{
            "id":{
               "$ref":"#/definitions/uuidPattern"
            },
            "version":{
               "type":"string",
               "format":"date-time"
            },
            "name":{
               "type":"string"
            },
            "templateName":{
               "type":"string"
            },
            "jurisdiction":{
               "type":"string"
            },
            "rank":{
               "type":"integer"
            },
            "text":{
               "type":"string"
            },
            "welshText":{
               "type":"string"
            },
            "urgentTimeLimitInMinutes":{
               "type":"integer"
            },
            "resultDefinitions":{
               "type":"array",
               "items":{
                  "type":"object",
                  "properties":{
                     "id":{
                        "$ref":"#/definitions/uuidPattern"
                     },
                     "mandatory":{
                        "type":"boolean"
                     },
                     "primaryResult":{
                        "type":"boolean"
                     },
                     "sequence":{
                        "type":"integer"
                     }
                  },
                  "additionalProperties":false,
                  "required":[
                     "id",
                     "mandatory",
                     "primaryResult",
                     "sequence"
                  ]
               }
            }
         },
         "additionalProperties":false,
         "required":[
            "id",
            "version",
            "name",
            "templateName",
            "rank"
         ]
      }
   }
}